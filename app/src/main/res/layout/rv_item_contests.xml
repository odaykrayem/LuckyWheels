<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:clipToPadding="false"
    android:background="@drawable/bg_item_contest">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_card"
        android:layout_width="105dp"
        android:layout_height="120dp"
        app:cardCornerRadius="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        >
        <ImageView
            android:id="@+id/contest_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_money_bag"

            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/contest_prize_tv"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_card"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="prize"
        android:textSize="20sp"
        android:fontFamily="@string/menu_text_font_family" />
    <TextView
    android:layout_marginTop="5dp"
    android:id="@+id/contest_draw_date_tv"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/contest_prize_tv"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_centerInParent="true"
    android:text="prize"
    android:textSize="16sp"
    android:fontFamily="@string/menu_text_font_family" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/contest_draw_time_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contest_draw_date_tv"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:text="prize"
        android:textSize="16sp"
        android:fontFamily="@string/menu_text_font_family" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contest_participate_btn"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_below="@id/contest_draw_time_tv"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_btn_gold"
        android:text="@string/participate"
        android:textColor="@android:color/black"/>
</RelativeLayout>