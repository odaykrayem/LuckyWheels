<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@android:color/white">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@drawable/scrollbar_register_color"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/enter_screen_header_image_corner"
                android:layout_alignParentTop="true"
                android:elevation="3dp"
                android:layout_alignTop="@+id/linear2"
                >


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/wave2" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/wave1"
                    />

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="220dp"
                    android:layout_height="113dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/img_roulette_25" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/header"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/refresh_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="@string/refresh_hint"
                        android:gravity="center"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/darkGreen"
                        android:background="@color/grey"
                        />
                    <LinearLayout
                        android:id="@+id/user_full_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/refresh_hint"
                        >
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:textColor="@android:color/black"
                            android:layout_weight="1"
                            android:text="@string/your_name"
                            android:background="@color/colorAccent"
                            android:paddingStart="5dp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_name_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_weight="2"
                            android:textColor="@android:color/black"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/user_email_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_full_name_layout"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">
                        <!-- margin start = 16-->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:letterSpacing="0.0178571429"
                            android:text="@string/email"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:paddingStart="5dp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_eamil_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:letterSpacing="0.0178571429"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/user_balance_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_below="@id/user_email_layout"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_weight="1"
                            android:text="@string/your_balance"
                            android:background="@color/colorAccent"
                            android:paddingStart="5dp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_balance_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:layout_weight="2"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical|center_horizontal" />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/user_points_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_balance_layout"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">
                        <!-- margin start = 16-->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="@dimen/profile_text_size"
                            android:letterSpacing="0.0178571429"
                            android:text="@string/points"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:paddingStart="5dp"/>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_points_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:layout_weight="2"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.0178571429"
                            android:textAlignment="center"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/profile_text_size"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/user_ref_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/user_points_layout"
                        android:background="@color/colorAccent"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">
                        <!-- margin start = 16-->
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textAllCaps="false"
                            android:textSize="20sp"
                            android:layout_gravity="center_vertical"
                            android:letterSpacing="0.0178571429"
                            android:text="@string/ref_code"
                            android:layout_weight="1"
                            android:background="@color/colorAccent"
                            android:paddingStart="5dp"/>
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/profile_ref_code_tv"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:fontFamily="sans-serif"
                            android:textStyle="normal"
                            android:textColor="@android:color/black"
                            android:textAllCaps="true"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:letterSpacing="0.0178571429"
                            android:layout_weight="2"
                            android:background="#BAAFAF"
                            android:ellipsize="marquee"
                            android:marqueeRepeatLimit="marquee_forever"/>
                        <ImageButton
                            android:id="@+id/copy_btn"
                            android:layout_width="65dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_copy"
                            android:foregroundGravity="center"
                            android:scaleType="centerCrop"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/user_ref_code_times_layout"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:background="@color/colorAccent"
                        android:layout_below="@id/user_ref_code_layout"
                        android:weightSum="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="22dp"
                        android:layout_marginStart="40dp"
                        android:layout_marginEnd="40dp"
                        android:layout_marginBottom="16dp">
                    <!-- margin start = 16-->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:letterSpacing="0.0178571429"
                        android:text="@string/ref_code_times"
                        android:layout_weight="2"
                        android:background="@color/colorAccent"
                        android:paddingStart="5dp"
                        android:layout_marginEnd="5dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/profile_ref_code_times_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textAllCaps="true"
                        android:textSize="40sp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:letterSpacing="0.0178571429"
                        android:layout_weight="1"
                        android:background="#BAAFAF"
                        android:marqueeRepeatLimit="marquee_forever"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/logout_btn"
                        android:layout_below="@id/user_ref_code_times_layout"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="@string/log_out"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="10dp"
                        android:layout_margin="20dp"
                        android:textColor="@color/light_red"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:background="@drawable/bg_img_btn_red"
                        android:layout_alignParentRight="true"
                        />

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>