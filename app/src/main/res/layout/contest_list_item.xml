<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_card"
        android:layout_width="80dp"
        android:layout_height="110dp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="12dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:id="@+id/contest_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_money_bag"
            android:layout_gravity="top"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:id="@+id/contest_prize_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/container_card"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="prize"
        android:textSize="14sp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/contest_participate_btn"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="3dp"
        android:text="@string/participate"
        android:background="@color/colorAccent"
        android:layout_below="@id/contest_prize_tv"/>
</RelativeLayout>